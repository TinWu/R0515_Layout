@{
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewBag.Title = null;
    ViewBag.BodyClass = "login custom";
    ViewBag.IsFirstPage = true;
}


<h1 class="logo"><span>@Resources.ResWeb.WebTitle</span></h1>

<div class="login-box">
    <h3>登入 LOGIN</h3>
    <form class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-xs-4">帳號 Username</label>
            <div class="col-xs-8"><input type="text" class="form-control" placeholder="帳號"></div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-4">密碼 Password</label>
            <div class="col-xs-8"><input type="password" class="form-control" placeholder="密碼"></div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-4">驗證碼 Check</label>
            <div class="col-xs-4">
                <input type="text" class="form-control" placeholder="驗證碼">
            </div>
            <div class="col-xs-4">
                <img src="" alt="code here">
            </div>
        </div>
        <div class="form-action">
            <div class="col-xs-offset-4">
                <button>確定登入</button>
            </div>
        </div>
    </form>
</div>